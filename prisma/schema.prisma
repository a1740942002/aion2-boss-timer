generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// 首領類型枚舉
enum BossType {
  RARE // 稀有
  LEGACY // 傳承
  UNIQUE // 獨特
}

// 首領資料模型
model Boss {
  id            Int       @id @default(autoincrement())
  name          String // 首領名稱
  teleportPoint String // 傳送點
  type          BossType // 類型 (稀有/傳承/獨特)
  respawnHours  Float // 重生時間 (小時)
  specialDrop   Boolean   @default(false) // 是否有特殊掉落
  deathTime     DateTime? // 死亡時間
  reporter      String? // 回報者
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@map("bosses")
}
