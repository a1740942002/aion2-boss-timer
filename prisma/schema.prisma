generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Boss {
  id            Int       @id @default(autoincrement())
  name          String
  teleportPoint String
  type          BossType
  respawnHours  Float
  deathTime     DateTime?
  reporter      String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  specialDrop   Boolean   @default(false)

  @@map("bosses")
}

enum BossType {
  RARE
  LEGACY
  UNIQUE
}
